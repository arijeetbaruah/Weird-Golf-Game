<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <!-- Undo the unwanted Win32 specific PlatformToolset value setup earlier if the user has declared a value for TargetFrameworkVersion -->
  <PropertyGroup>
    <PlatformToolset Condition="'$(TargetFrameworkVersion)' != ''"></PlatformToolset>
  </PropertyGroup>

  <!-- Prevent the unwanted override of PATH in SetBuildDefaultEnvironmentVariables if $(_IsNativeEnvironment) has been used to enable MS's x64 toolset -->
  <PropertyGroup>
    <_IsNativeEnvironment Condition="'$(_IsNativeEnvironment)' != ''"></_IsNativeEnvironment>
  </PropertyGroup>

  <PropertyGroup>
    <PlatformShortName>ORBIS</PlatformShortName>
    <DefaultPlatformToolset>Clang</DefaultPlatformToolset>
    <PlatformToolset>Clang</PlatformToolset>
    <UndefinedBehavior      Condition="'$(UndefinedBehavior)'      == ''">None</UndefinedBehavior>
    <AddressSanitizer       Condition="'$(AddressSanitizer)'       == ''">false</AddressSanitizer>
    <NoStandardIncludePaths Condition="'$(NoStandardIncludePaths)' == ''">false</NoStandardIncludePaths>
    <DistributedBuild       Condition="'$(DistributedBuild)'       == ''">false</DistributedBuild>
  </PropertyGroup>

  <PropertyGroup>
    <IntDir Condition="'$(IntDir)'=='' and '$(IntermediateOutputPath)'!=''">$(IntermediateOutputPath)</IntDir>
    <IntDir Condition="'$(IntDir)'=='' and '$(IntermediateOutputPath)'==''">$(Platform)_$(Configuration)\</IntDir>
    <OutDir Condition="'$(OutDir)'=='' and '$(SolutionDir)' != ''">$(SolutionDir)$(Platform)_$(Configuration)\</OutDir>
    <OutDir Condition="'$(OutDir)'=='' and '$(SolutionDir)' == ''">$(IntDir)</OutDir>
  </PropertyGroup>
</Project>
