<?xml version="1.0" encoding="utf-8"?>
<Rule Name="ConfigurationGeneral" PageTemplate="generic" DisplayName="全般" xmlns="http://schemas.microsoft.com/build/2009/properties" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:sys="clr-namespace:System;assembly=mscorlib">
  <Rule.Categories>
    <Category Name="General" DisplayName="全般" />
    <Category Name="ProjectDefaults" DisplayName="プロジェクトの既定値" />
  </Rule.Categories>
  <Rule.DataSource>
    <DataSource Persistence="ProjectFile" Label="Configuration" />
  </Rule.DataSource>
  <StringProperty Name="BuildLogFile" DisplayName="ビルド ログ ファイル" Description="ビルドのログが有効のとき、書き込み先となるビルド ログ ファイルを指定します。" F1Keyword="VC.Project.VCConfiguration.BuildLogFile" Category="General" Default="$(ProjectDir)\$(MSBuildProjectName).log" Subtype="file" Visible="false">
