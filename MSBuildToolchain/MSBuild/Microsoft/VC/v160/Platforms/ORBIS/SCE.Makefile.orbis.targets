<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

  <!-- *******************************************************************************************
        Property pages
       ******************************************************************************************* -->
       
  <PropertyGroup>
    <UseDefaultPropertyPageSchemas>false</UseDefaultPropertyPageSchemas>
  </PropertyGroup>
  
  <PropertyGroup Condition="'$(SceLangID)' == ''">
    <SceLangID Condition="'$(LangID)' == '1041'">1041</SceLangID>
    <SceLangID Condition="'$(LangID)' != '1041'">1033</SceLangID>
  </PropertyGroup>
  
  <ItemGroup Condition="'$(UseORBISDefaultPropertyPageSchemas)' != 'false'">
    <PropertyPageSchema Include="
        $(VCTargetsPath)\$(LangID)\ProjectItemsSchema.xml;
        $(VCTargetsPath)\$(LangID)\directories.xml;
        $(VCTargetsPath)\$(LangID)\debugger_general.xml;
        $(VCTargetsPath)\Platforms\ORBIS\$(SceLangID)\orbisdebugger_*.xml;
        $(VCTargetsPath)\$(LangID)\nmake.xml
    " />
    
    <!-- project only rules -->
    <PropertyPageSchema Include="$(VCTargetsPath)$(LangID)\general_makefile.xml">
       <Context>Project</Context>
    </PropertyPageSchema>

    <!-- Property sheet only rules -->
    <PropertyPageSchema Include="$(VCTargetsPath)$(LangID)\general_makefile_ps.xml;$(VCTargetsPath)$(LangID)\usermacros.xml">
      <Context>PropertySheet</Context>
    </PropertyPageSchema>
  </ItemGroup>

  <PropertyGroup>
    <_FullIntDirPath>$([MSBuild]::Escape($([System.IO.Path]::GetFullPath(`$([System.IO.Path]::Combine(`$(MSBuildProjectDirectory)`, `$(IntDir)`))`))))</_FullIntDirPath>
    <ExtensionsToDeleteOnClean Condition="Exists('$(_FullIntDirPath)\modifybuild.tmp')">modifybuild.tmp;$(ExtensionsToDeleteOnClean)</ExtensionsToDeleteOnClean>
  </PropertyGroup>

  <Import Condition="Exists('$(_FullIntDirPath)\modifybuild.tmp')" Project="$(_FullIntDirPath)\modifybuild.tmp"/>

  <!-- Must add our check for $(RunClangStaticAnalysis) here as it's added by modifybuild.tmp -->
  <PropertyGroup>
    <ForceImportAfterCppTargets Condition="'$(RunClangStaticAnalysis)'=='true' and '$(ConfigurationType)'=='Makefile'">$(VCTargetsPath)\Platforms\ORBIS\SCE.MakefileBuild.ClangSA.targets</ForceImportAfterCppTargets>
  </PropertyGroup>

</Project>
